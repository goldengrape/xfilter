{
    "manifest_version": 3,
    "name": "清爽一X",
    "version": "1.0",
    "description": "在 x.com 中过滤包含指定关键词的推文",
    "permissions": ["storage"],
    "action": {
      "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "matches": ["https://x.com/*"],
        "js": ["content.js"],
        "run_at": "document_end"
      }
    ]
  }
  